<div class="row">

<%= react_component 'CategoriesPopular', {presenter: @presenter} %>


  <div class="col-md-6 popular-categories">
    <h2> Browse Popular Categories</h2>
      <table id="browse-categories">
        <% @presenter.popular.each do |category| %>
            <tr>
              <td><%= link_to category.name, category_path(category.id) %></td>
            </tr>
        <% end %>
      </table>
  </div>

  <div class="col-md-6 all-categories">
    <h2> Browse All Categories</h2>
      <table id="browse-categories">
        <% @presenter.categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, category_path(category.id) %></td>
            </tr>
        <% end %>
      </table>
  </div>

</div>
