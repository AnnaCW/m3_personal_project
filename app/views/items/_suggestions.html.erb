
<div class="item-suggestions row">
  <%= form_tag :suggestions, method: :get, class: "form-inline" do %>
        <div class="form-group">
            <%= hidden_field_tag :track, @item.id %>
            <%= submit_tag "More Like This", class: "btn btn-success" %>
        </div>
  <% end %>
</div>


<% if @suggestions_by_track %>
  <% @suggestions_by_track.each do |suggestion| %>
    <%= suggestion.name %>
  <% end %>

<% end %>
